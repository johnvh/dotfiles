[user]
	name = John Van Horn

[core]
	excludesfile = ~/.gitignore.global

[color]
	# auto - always use color when output to terminal
	ui = auto

[alias]
	st = status
	co = checkout
	ci = commit

	# show global aliases
	alias = "!f(){ git config -l --global | grep ^alias;}; f"

    # alias for diff of index
    ix = "diff --cached"

[merge]
 #In addition to <<< (yours) and >>> (theirs) markers, adds ||| (original,
 #parent) marker
 conflictstyle = diff3

 # custom merge command
 #tool = gvimdiff3
 tool = gvimdiff

#[mergetool "gvimdiff3"]
 # 3-way merge with gvim. should open 4 buffers. 3 across top LOCAL, BASE,
 # REMOTE. bottom buffer is merged working copy.
 #cmd = gvim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[rebase]
 autosquash = true
